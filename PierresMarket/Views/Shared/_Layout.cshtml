<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="container">
      <h1>Pierre's Sweet and Savory Treats</h1>
      <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
          @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link"})
        </li>
        <li class="nav-item">
          @Html.ActionLink("Treats", "Index", "Treats", null, new { @class = "nav-link"})
        </li>
        <li class="nav-item">
          @Html.ActionLink("Flavors", "Index", "Flavors", null, new { @class = "nav-link"})
        </li>
        <li class="nav-item dropdown">
          @if(User.Identity.IsAuthenticated)
          {
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">@User.Identity.Name</a>
          }
          else
          {
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Sign in</a>
          }
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href='@Url.Action("Index", "Account")'>Account</a></li>
            @if (!User.Identity.IsAuthenticated)
            {
              <li><a class="dropdown-item" href='@Url.Action("Register", "Account")'>Register for an account</a></li>
              <li><a class="dropdown-item" href='@Url.Action("Login", "Account")'>Login</a></li>
            }
            else
            {
              <li><hr class="dropdown-divider"></li>
              <li class="text-align-left">
                  @using (Html.BeginForm("LogOff", "Account"))
                  {
                    <button type="submit" class="btn btn-block">Log out</button>
                  }
              </li>
            }
          </ul>
        </li>
      </ul>
      <hr>
      @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>