@{
  Layout = "_Layout";
}

@model PierresMarket.Models.Flavor

<h2>Add new flavor</h2>

@using (Html.BeginForm())
{
  <div class="mb-3">
    @Html.LabelFor(model => model.Name, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required="required"})
  </div>

  <input type="submit" value="Add flavor" class="btn btn-dark btn-block" />
}