@{
  Layout = "_Layout";
}

@model PierresMarket.Models.Flavor

<h2>Flavor Details</h2>

<div class="col">
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">@Model.Name</h5>
      <hr>
      <h6>Treats</h6>
      @if (Model.JoinEntities.Count == 0)
      {
        <p>This flavor doesnt have any treats connected to it yet.</p>
      }
      else
      {
        <ul>
          @foreach (var join in Model.JoinEntities)
          {
            <li>@Html.ActionLink($"{join.Treat.Name}", "Details", "Treats", new { id= join.Treat.TreatId })</li>
          }
        </ul>
      }
    </div>
  </div>
</div>

<!-- Modal button -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#flavor">
  Delete flavor
</button>

<!-- Modal -->
<div class="modal fade" id="flavor" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="flavor_Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="flavor_Label">Delete flavor: @Model.Name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete @Model.Name?</p>
        <p>This action is permanent and cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        @using (Html.BeginForm())
        {
          <input type="submit" value="Delete flavor" class="btn btn-danger" />
        }
      </div>
    </div>
  </div>
</div>