@{
  Layout = "_Layout";
}

@model PierresMarket.Models.Flavor

<h2>Flavor Details</h2>

<div class="col">
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">@Model.Name</h5>
      <hr>
      <h6>Recipes</h6>
      @if (Model.JoinEntities.Count == 0)
      {
        <p>This flavor doesnt have any recipes connected to it yet.</p>
      }
      else
      {
        <ul>
          @foreach (var join in Model.JoinEntities)
          {
            <li>@Html.ActionLink($"{join.Treat.Name}", "Details", "Treats", new { id= join.Treat.TreatId })</li>
          }
        </ul>
      }
    </div>
  </div>
</div>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete flavor" class="btn btn-danger" />
}