@{
  Layout = "_Layout";
}

@using PierresMarket.ViewModels

@model RegisterViewModel

<div class="d-flex">
  <div class="col-md-5 card mx-auto shadow-lg p-3 mb-5 bg-body rounded">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype="multipart/form-data" }))
    {
      @Html.ValidationSummary(true)
      <h2 class="text-center">Sign up</h2>
      <hr>
      <div class="mb-3">
        @Html.LabelFor(user => user.UserName, new { @class = "form-label"})
        @Html.TextBoxFor(user=> user.UserName, new { @class = "form-control", required="required"})
        @Html.ValidationMessageFor(user => user.UserName)
      </div>
      <div class="mb-3">
        @Html.LabelFor(user => user.FirstName, new { @class = "form-label"})
        @Html.TextBoxFor(user=> user.FirstName, new { @class = "form-control", required="required"})
        @Html.ValidationMessageFor(user => user.FirstName)
      </div>
      <div class="mb-3">
        @Html.LabelFor(user => user.LastName, new { @class = "form-label"})
        @Html.TextBoxFor(user=> user.LastName, new { @class = "form-control", required="required"})
        @Html.ValidationMessageFor(user => user.LastName)
      </div>
      <div class="mb-3">
        @Html.LabelFor(user => user.Email, new { @class = "form-label"})
        @Html.TextBoxFor(user=> user.Email, new { @class = "form-control", required="required"})
        @Html.ValidationMessageFor(user => user.Email)
      </div>
      <div class="mb-3">
        @Html.LabelFor(user=> user.Password, new { @class = "form-label"})
        @Html.PasswordFor(user=> user.Password, new { @class = "form-control", required="required"})
        @Html.ValidationMessageFor(user => user.Password)
      </div>
      <div class="mb-3">
        @Html.LabelFor(user=> user.ConfirmPassword, new { @class = "form-label"})
        @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form-control", required="required"})
        @Html.ValidationMessageFor(user => user.ConfirmPassword)
      </div>
      <div class="mb-3">
        @Html.Label("Upload Image", null, new { @class = "form-label"})
        @Html.TextBoxFor(model => model.ImageFile, new { @class = "form-control", type="file", accept="image/*"})
      </div>
      <button type="submit" class="btn btn-success btn-block mb-3">Register</button>
      <p class="text-muted text-center">Already have an account? @Html.ActionLink("Login", "Login")</p>
    }
  </div>
</div>