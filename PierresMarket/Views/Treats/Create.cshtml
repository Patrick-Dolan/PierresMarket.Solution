@{
  Layout = "_Layout";
}

@model PierresMarket.Models.Treat

<h2>Add new treat</h2>

@using (Html.BeginForm("Create", "Treats", FormMethod.Post, new { enctype="multipart/form-data"}))
{
  <div class="mb-3">
    @Html.LabelFor(model => model.Name, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required="required"})
  </div>

  <div class="mb-3">
    @Html.LabelFor(model => model.Price, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", required="required", type="Number"})
  </div>

  <div class="mb-3">
    @Html.Label("Upload Image", null, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.ImageFile, new { @class = "form-control", type="file", accept="image/*"})
  </div>

  <div class="mb-3">
    @Html.LabelFor(model => model.Description, new { @class = "form-label"})
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", required="required"})
  </div>

  <div class="mb-3">
    @Html.Label("Add flavor tag")
    @Html.DropDownList("FlavorId", ViewBag.FlavorId, "Add selection", new { @class = "form-control"})
  </div>

  <input type="submit" value="Add treat" class="btn btn-primary btn-block" />
}