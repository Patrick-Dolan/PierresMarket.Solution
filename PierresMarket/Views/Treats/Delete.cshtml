<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#flavor_">
  Delete Treat
</button>

<!-- Modal -->
<div class="modal fade" id="flavor_" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="flavor_Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="flavor_Label">Delete treat: @Model.Name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete @Model.Name?</p>
        <p>This action is permanent and cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        @using (Html.BeginForm())
        {
          <input type="submit" value="Delete treat" class="btn btn-danger" />
        }
      </div>
    </div>
  </div>
</div>