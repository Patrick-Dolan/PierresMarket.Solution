@{
  Layout = "_Layout";
}
@using PierresMarket.Models
@model List<PierresMarket.Models.Treat>

<h2>Welcome to Pierres Sweet and Savory treats</h2>
@if (Model.Count == 0 && ViewBag.Flavors.Count == 0)
{
  <p>There are currently no recipes or flavor tags in the system. Add some and you'll see them displayed on this page.</p>
}
else
{
  <p>Feel free to browse all our delicious recipes below or using the links above.</p>
  <div class="row">
    @if (Model.Count != 0)
    {
      <div class="col">
        <h4>Treats</h4>
        @foreach (Treat treat in Model)
        {
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId})</h5>
              <hr>
              <p class="card-text">@treat.Description</p>
            </div>
          </div>
        }
      </div>
    }
    else
    {
      <div class="col">
        <p>No treats have been added yet.</p>
      </div>
    }
    @if (ViewBag.Flavors.Count != 0)
    {
      <div class="col">
        <h4>Flavors</h4>
        <div class="row row-cols-1 row-cols-md-2 g-3">
          @foreach (Flavor flavor in ViewBag.Flavors)
          {
            <div class="col">
              <div class="card mb-1">
                <div class="card=body">
                  <h5 class="mx-auto text-center">@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId})</h5>
                </div>
              </div>
            </div>
          }
        </div>
      </div>
    }
    else
    {
      <div class="col">
        <p>No flavors have been added yet.</p>
      </div>
    }
  </div>
}
