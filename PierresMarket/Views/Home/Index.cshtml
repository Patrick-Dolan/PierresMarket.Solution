@{
  Layout = "_Layout";
}
@using PierresMarket.Models
@model List<PierresMarket.Models.Treat>

<h2>Welcome to Pierres Sweet and Savory treats</h2>
@if (Model.Count == 0)
{
  <p>There are currently no recipes in the system.</p>
}
else
{
  <p>Feel free to browse all our delicious recipes below or using the links above.</p>
}

<div class="row">
  <div class="col">
    <h4>Treats</h4>
    @foreach (Treat treat in Model)
    {
      <p>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId})</p>
    }
  </div>
  <div class="col">
    <h4>Flavors</h4>
    @foreach (Flavor flavor in ViewBag.Flavors)
    {
      <p>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId})</p>
    }
  </div>
</div>